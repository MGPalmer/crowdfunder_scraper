#!/usr/bin/env node

const fetch = require("node-fetch");
const yargs = require("yargs");

const argv = yargs
  .example("./scrape_crowdfunder [options] http://example.com/projects")
  .option("verbose", {
    alias: "v",
    description: "Run verbosely",
    type: "boolean"
  })
  .hide("version")
  .help()
  .alias("help", "h").argv;

const index_url = argv._[0];
console.log(index_url);
if (index_url) {
  console.log("bla bla");
  // fetch(index_url).then(res => {
